{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2016", "es2017.object"],
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": false, // Set to true in prod
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "engines": {
    "node": "11.1.0",
    "npm": "6.4.1"
  }
}